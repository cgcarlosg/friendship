<div class="container">
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Friendship</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <% unless current_user == @user %>
        <td><h3><%= @user.name %></h3></td>
        <td> 
        <%= render 'users/friend_btn' %>
        </td>
        <% end %>
      </tr>
  </tbody>
</table>
</div>

<section class="user-section">
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>

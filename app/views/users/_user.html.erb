
<table class="table table-striped table-bordered table-hover">

  <thead class="thead">
    <tr>
      <th>NAME</th>
      <th colspan="3">STATUS</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if user != current_user %>
      <tr>
        <td><%= link_to user.name, user_path(user) %></td>
        <td><%= link_to 'Send invitation', user_path(user), class:"btn btn-outline-success btn-sm"  %></td>
        <td>/</td>
        
        <td> <%= link_to 'Send Invitation', friends_path(friend_id: user.id) %></td>
      </tr>
     
    <% end %>
    <% end %>
  </tbody>
 
</table>



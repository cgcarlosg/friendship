
  <h3>Friend Requests</h3>
  <% unless @friend_offers.empty? %>
    <ul>
      <% @friend_offers.each do |offer| %>

        <h3><%= offer.requester.name %></h3>
      <%= render 'shared/user_list_item', user: offer.requester, request: offer, type: :accept %>
      <% end %>
    </ul>
  <% end %>

  <%= content_tag('hr', "") unless @friend_offers.empty? || @friend_requests.empty? %>
  <%= content_tag('h2', "Requests you've sent") unless @friend_requests.empty? %>
  <% unless @friend_requests.empty? %>
    <ul>
      <% @friend_requests.each do |request| %>
        <h3><%= request.requestee.name %></h3>
      <%= render 'shared/user_list_item', user: request.requestee, request: request, type: :revoke %>
      <% end %>
    </ul>
  <% end %>

  <article class="timeline">
<h3>My Friends</h3>
<% unless !@my_friends %>
<br/>
<%= render 'my_friends' %>
    <% end %>
</article>

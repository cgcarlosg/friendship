<h1>FRIENDS</h1>
<br/>

<div class="card text-center">
  <div class="card-header">
    <h3> USER / FRIENDSHIP </h3>
  </div>
  <div class="card-body">
    <h4 class="card-title"> 
    <% @friends.each do |f| %>
      <tr>
      <% if f.status == true %>
        <td>  <%= list_friends %> </td>
        <% end %>
      </tr>
      <% end %>
    </h4>
  </div>
</div>


<br/>
<br/>
<h1>PEOPLE WHO WANTS TO BE MY FRIEND</h1>
<br/>
<div class="container">
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>USERS</th>
      <th>RESPONSE</th>
    </tr>
  </thead>
  <tbody>
  <% unless @requests == nil %>
  <% @requests.each do |f| %>
      <tr>
        <td> <%= f.user.name %> </td>
        <td> <%= link_to("Accept", friendship_url(id: f.id), method: :patch, class: "btn") %> 
             <%= link_to("Decline", friendship_url(id: f.id), method: :delete, class: "btn decline") %> 
        </td>
      </tr>
      <% end %>
      <% end %>
  </tbody>
</table>
</div>
